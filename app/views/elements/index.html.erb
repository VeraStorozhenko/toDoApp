<nav class="navbar navbar-inverse">
  <div class="container-fluid bg-info text-white" id='app'>
    <div class="navbar-header">  
      <a class="navbar-brand" href="#">To Do List!</a>   
    </div>
  </div>
  
 <%= render "/elements/valid" %>
    <table>
      <tr>
        <th>Text</th>
        <th></th>
      </tr>
      <% @elements.each do |element, task| %>
        <tr>
          <td><input type="checkbox" id=<%= element.id %> class="js-mark-done"></td>

          <td><%= element.text %></td>
          <td><%= link_to 'Show', element_path(element) %></td>
          <td><%= link_to 'Edit', edit_element_path(element) %></td>
          <td><%= link_to 'Destroy', element_path(element),
                  method: :delete,
                  data: {confirm: 'Are you sure?'}%></td>
        </tr>
      <% end %>
    </table>
<nav>

<tr>
  <th>Sort by:</th>
  <th><%= sortable "text" %></th>
  <th><%= sortable "timestamp" %></th>
</tr>




